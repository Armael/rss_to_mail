(jbuild_version 1)

(executable
 ((name main_script)
  (js_of_ocaml
   ((flags (--wrap-with-fun=main))))
  (libraries (rss_to_mail.std appsscript rss_to_mail))
  (flags (:standard -open Std))
  (preprocess (pps (js_of_ocaml-ppx)))))

(rule
 ((targets (rss_to_mail.gs))
  (action
   (with-stdout-to ${@}
    (progn
     (cat ${path:main_script.bc.js})
     (cat ${path:main.gs}))))))

(install
 ((section share)
  (package rss_to_mail-script)
  (files (rss_to_mail.gs))))
