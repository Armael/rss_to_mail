(jbuild_version 1)

(executables
 ((names (rss_to_mail))
  (js_of_ocaml
   ((flags (--wrap-with-fun=main))))
  (libraries (containers uri appsscript))
  (flags (:standard -open Containers -open Fun))
  (preprocess (pps (js_of_ocaml-ppx)))))

(rule
 ((targets (rss_to_mail.gs))
  (action (copy ${path:rss_to_mail.bc.js} ${@}))))

(alias
 ((name all)
  (deps (rss_to_mail.gs main.gs))))
